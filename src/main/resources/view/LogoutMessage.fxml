<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.lankaice.project.controller.LogoutMessageController"
            prefWidth="300.0" prefHeight="150.0" style="-fx-background-color: white;">


    <VBox spacing="20" alignment="CENTER" layoutX="25.0" layoutY="25.0" prefWidth="250" prefHeight="100">
        <Label text="Confirm Logout" style="-fx-font-size: 18px; -fx-font-weight: bold;" />
        <Label text="Are you sure you want to log out?" style="-fx-font-size: 14px;" wrapText="true"/>

        <HBox spacing="30" alignment="CENTER">
            <Button text="CANCEL" fx:id="cancelButton" onAction="#onCancel" style="-fx-text-fill: #2196F3; -fx-font-weight: bold;"/>
            <Button text="OK" fx:id="okButton" onAction="#onConfirm" style="-fx-text-fill: #2196F3; -fx-font-weight: bold;"/>
        </HBox>
    </VBox>
</AnchorPane>
